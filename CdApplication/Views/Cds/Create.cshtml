@model CdApplication.Models.Cd

@{
    ViewData["Title"] = "Lägg till CD";
}

<h1>Lägg till</h1>

<h2>Cd</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="error"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label><br />
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="error"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="error"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArtistId" class="control-label"></label><br />
                <select asp-for="ArtistId" class ="form-control" asp-items="ViewBag.ArtistId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CreatedDate" class="control-label"></label><br />
                <input asp-for="CreatedDate" class="form-control" />
                <span asp-validation-for="CreatedDate" class="error"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Alla skivor</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
